@model SV20T1020042.DomainModels.Product
@{
    ViewBag.Title = "Xóa Mặt Hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Product/Delete/@Model.ProductID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ProductName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ProductDescription</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Unit</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Price</p>
                </div>
            </div>
            <div class="form-group">

                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo"/>
                    <img id="Photo" src="~/images/products/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                @if (!SV20T1020042.BusinessLayers.ProductDataService.InUsedProduct(Model.ProductID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Xác nhận xóa
                    </button>
                }
                <a href="~/Product" class="btn btn-default"> 
                    Quay lại
                </a>
            </div>

        </form>

    </div>
</div>