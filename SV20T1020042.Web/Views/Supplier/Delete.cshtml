@model SV20T1020042.DomainModels.Supplier
@{
    ViewBag.Title = "Xóa nhà cung cấp";
}

<div class="box box-danger">
    <div class="box-body">

        <form action="~/Supplier/Delete/@Model.SupplierID" method="post">
            <div class="form-group">
    <label>Tên nhà cung cấp</label>
                <p class="form-control-static">@Model.SupplierName</p>
  </div>
    <div class="form-group">
    <label>Tên liên lạc</label>
                <p class="form-control-static">@Model.ContactName</p>
     </div>
  <div class="form-group">
    <label>Điện Thoại</label>
                <p class="form-control-static">@Model.Phone</p>
  </div>
   <div class="form-group">
    <label>Email</label>
                <p class="form-control-static">@Model.Email</p>
  </div>
            <div class="form-group">
                <label>Ngày Thành Lập</label>
                <p class="form-control-static">@Model.Date</p>
            </div>
  <div class="form-group">
    <label>Điạ Chỉ</label>
                <p class="form-control-static">@Model.Provice</p>
  </div>
   <div class="form-group">
    <label>Tỉnh/Thành</label>
    <p class="form-control-static">Huế</p>

  </div>
            <div class="form-group">
                @if (!SV20T1020042.BusinessLayers.CommonDataService.IsUsedSupplier(Model.SupplierID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Xác nhận xóa
                    </button>
                }
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>

    </div>
</div>