@model SV20T1020042.DomainModels.Supplier
@{
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">
           @*  <input type="hidden" name="SupplierId" value="@Model.SupplierID" /> *@
            @Html.HiddenFor( m=>m.SupplierID)
  
  <div class="form-group">
    <label>Tên nhà cung cấp</label>
                <input type="text" class="form-control" name="SupplierName" autofocus value="@Model.SupplierName">
                @Html.ValidationMessageFor(m=> m.SupplierName,"", new { @style = "color:#f00"})
  </div>
    <div class="form-group">
    <label>Tên liên lạc</label>
                <input type="text" class="form-control" name="ContactName" value="@Model.ContactName">
                @Html.ValidationMessageFor(m=> m.ContactName,"", new { @style = "color:#f00"})
     </div>
  <div class="form-group">
    <label>Điện Thoại</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
  </div>
   <div class="form-group">
    <label>Email</label>
                <input type="email" class="form-control" name="Email" value="@Model.Email">
                @Html.ValidationMessageFor(m=> m.Email,"", new { @style = "color:#f00"})
  </div>
            <div class="form-group">
                <label>Ngày thành lập</label>
                <input type="hidden" name="Date" value="@Model.Date" />
                <input type="text" class="form-control date-picker"
                       name="Dateinput"
                       value="@Model.Date.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("em-GB"))" />
            </div>
  <div class="form-group">
    <label>Điạ Chỉ</label>
                <input type="text" class="form-control" name="Address" value="@Model.Address">
  </div>
            <div class="form-group">
                <label>Tỉnh/Thành</label>
               @*  <select class="form-control" name="Provice">
                    <option>--Chọn tỉnh/thành</option>
                    @foreach (var item in SV20T1020042.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Provice)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }
                </select> *@
                @Html.DropDownListFor(m=>m.Provice, SelectListHelper.Provinces(),new {@class="form-control"})
                @Html.ValidationMessage("Province", new { @style = "color:#f00"})

            </div>
    <div class="form-group">
    <button type="submit" class="btn btn-primary">
   <i class="fa fa-floppy-o"></i> Lưu dữ liệu
   </button>
   <a href="~/Supplier" class="btn btn-default">
       Quay lại
       </a>
  </div>
            <div class="form-group">
                @Html.ValidationMessage("Error", new { @style = "color:#f00"})

            </div>

</form>
</div>
</div>
