@model SV20T1020042.Web.Models.SupplierSearchResult

@{
    Layout = null;
}
<div>
    <p style=" margin:10px 0 10px 0">
        Có<strong> @Model.RowCount</strong> Nhà cung cấp trong tổng số <strong> @Model.PageCount</strong> Trang</strong>
    </p>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>Tên nhà cung cấp</th>
                    <th>Tên liên lạc</th>
                    <th>Điện Thoại</th>
                    <th>Email</th>
                    <th>Địa Chỉ</th>
                    <th>Tỉnh/Thành</th>
                    <th>Ngày thành lập</th>

                    <th style="width:80px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.SupplierName</td>
                        <td>@item.ContactName</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        <td>@item.Provice</td>
                        <td>@item.Date.ToString("dd/MM/yyy", new System.Globalization.CultureInfo("en-GB"))</td>

                        <td class="text-right">
                            <a href="~/Supplier/Edit/@item.SupplierID" class="btn btn-xs btn-info">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Supplier/Delete/@item.SupplierID" class="btn btn-xs btn-danger">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.PageCount > 1)
    {
        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (Model.Page == p)
                    {
                        <li class="active"><a href="#">@p</a></li>
                    }
                    else
                    {
                        <li><a href="javascript:;" onclick="doSearch('#formSearch',@p)">@p</a></li>
                    }
                }

            </ul>
        </div>
    }
</div>




